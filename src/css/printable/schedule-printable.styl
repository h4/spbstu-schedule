.schedule-printable
    border-collapse: collapse;
    height: 100%
    border: black solid 1px;
    
    th
        border: #ccc solid 1px;
        width: 16%;
        font-size: 12pt
        padding 10px 0
        background #eee
        
    .time_th
        width: 4%;
        
    .time_td
        color: #777;
        font-size: 16pt;
        padding: 5px
        text-align: center;
        
    td
        border: #ccc solid 1px;
        vertical-align: top;
        margin 0
        padding 0

    .cell
        position: relative
        margin 0
        padding: 5px;
        height: 100%

    .subject
        font-size 18px
        margin-bottom 5px
        padding 0
        color #325A46
    .teacher
        font-size: 12pt
        color: #888
        padding 0
        margin 0
        margin-bottom 25px
        list-style-type none
        font-size 11pt
    .type
        font-size: 12pt
        font-style: italic
        position: absolute
        bottom: 4px
        left: 5px
    .place
        font-size: 12pt
        position: absolute
        bottom: 5px
        right: 5px
        margin 0
        padding 0
        text-align right
        list-style-type none
        max-width 90%


$btn-color = #46c765
.printBtn
    float right
    margin 0 15px
    padding 10px 16px
    cursor pointer
    display block
    font-size 12pt
    text-decoration none
    color #fff
    background $btn-color
    border-color $btn-color
    
    &:hover
        background darken($btn-color, 20%)